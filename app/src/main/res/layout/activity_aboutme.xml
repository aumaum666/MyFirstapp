<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg27"
    tools:context="comsci.kalin.myfirstapp.Aboutme">

    <TextView
        android:id="@+id/amtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/my_margin"
        android:text="@string/Amtitle"
        android:textSize="@dimen/h1" />

    <ImageView
        android:id="@+id/imvmypic"
        android:layout_width="@dimen/my_picture"
        android:layout_height="@dimen/my_picture"
        android:layout_below="@+id/amtext"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/my_margin"
        app:srcCompat="@drawable/aaaaaaa" />

    <Button
        android:id="@+id/ambutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="clickBackam"
        android:text="Back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ambutton"
        android:layout_below="@+id/imvmypic"
        android:layout_margin="@dimen/my_margin"
        android:background="#c8ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/amdetail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/Name"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/amdetail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/Id"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/amdetail3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/Cousre"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/amdetail4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:onClick="onClickFacebook"
                android:text="@string/Facebook"
                android:textSize="@dimen/h3" />

            <TextView
                android:id="@+id/txtTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_margin"
                android:layout_marginTop="@dimen/my_margin"
                android:text="@string/amtel"
                android:textSize="@dimen/h3" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
